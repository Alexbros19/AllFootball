<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/eventDetailOddsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:text="@string/string_which_team_will_win_game"
            android:textSize="@dimen/textSizeMedium"
            android:textStyle="italic"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25">

                <FrameLayout
                    android:id="@+id/oddProviderLogoFrameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/oddProviderLogoImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:scaleType="centerInside" />
                </FrameLayout>

            </FrameLayout>

            <com.alexbros.opidlubnyi.allfootball.views.EventDetailOddsButtonView
                android:id="@+id/oddButtonOneTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                app:label="1" />

            <com.alexbros.opidlubnyi.allfootball.views.EventDetailOddsButtonView
                android:id="@+id/oddButtonDrawTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                app:label="X" />

            <com.alexbros.opidlubnyi.allfootball.views.EventDetailOddsButtonView
                android:id="@+id/oddButtonTwoTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                app:label="2" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


