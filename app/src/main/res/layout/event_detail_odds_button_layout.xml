<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:clipToPadding="false"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/oddButtonRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <ImageView
            android:id="@+id/oddButtonArrowImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".2"
            android:visibility="invisible"
            tools:visibility="visible"
            tools:src="@drawable/icon_form_up"/>

        <TextView
            android:id="@+id/oddButtonLabelTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight=".2"
            tools:text="X"
            android:textColor="#5a595b"
            android:textStyle="bold"
            android:textSize="@dimen/textSizeSmall"/>

        <TextView
            android:id="@+id/oddButtonValueTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:background="@drawable/btn_round_edge_background"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="25.21"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/textSizeSmall"/>

    </LinearLayout>
</FrameLayout>